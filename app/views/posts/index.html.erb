<h1>Index</h1>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Título</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td>
        <%= link_to "Detalhes", post_path(post) %>
        <%= link_to "Editar", edit_post_path(post) %>
        <%= link_to "Excluir", post_path(post), method: :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "+ Novo Post", new_post_path %>